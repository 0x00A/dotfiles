#!/usr/bin/env bash
function truncpwd {
  pwd | awk -v len=25 '{ if (length($0) > len) print "..." substr($0, length($0)-len-3, length($0)); else print; }'
}

function branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

tmux rename-window "#[fg=colour110] $(truncpwd) #[fg=colour240]$(branch)"
echo "\033[1;32mâ¬¢\033[30m "

